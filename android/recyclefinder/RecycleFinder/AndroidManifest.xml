<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  android:installLocation="auto"
  android:versionCode="55"
  android:versionName="2.0.2"
  package="com.google.android.maps.recyclefinder" >

  <!-- Permission to initialize services -->
  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
  <!-- Permissions to record locations -->
  <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
  <uses-permission android:name="android.permission.WAKE_LOCK" />
  <!-- Permissions to access sensors -->
  <uses-permission android:name="com.dsi.ant.permission.ANT" />
  <uses-permission android:name="com.dsi.ant.permission.ANT_ADMIN" />
  <uses-permission android:name="android.permission.BLUETOOTH" />
  <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
  <!-- Permissions to upload tracks -->
  <uses-permission android:name="android.permission.GET_ACCOUNTS" />
  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
  <uses-permission android:name="android.permission.USE_CREDENTIALS" />
  <uses-permission android:name="com.google.android.googleapps.permission.GOOGLE_AUTH" />
  <uses-permission android:name="com.google.android.googleapps.permission.GOOGLE_AUTH.fusiontables" />
  <uses-permission android:name="com.google.android.googleapps.permission.GOOGLE_AUTH.local" />
  <uses-permission android:name="com.google.android.googleapps.permission.GOOGLE_AUTH.wise" />
  <uses-permission android:name="com.google.android.googleapps.permission.GOOGLE_AUTH.writely" />
  <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
  <!-- Permission to read phone state so voice announcement will not interrupt ongoing calls -->
  <uses-permission android:name="android.permission.READ_PHONE_STATE" />
  <!-- Permission to write to SD card -->
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
  <!-- Permissions to access RecycleFinder data -->
  <uses-permission android:name="com.google.android.apps.recyclefinder.RECYCLEFINDER_NOTIFICATIONS" />
  <uses-permission android:name="com.google.android.apps.recyclefinder.READ_TRACK_DATA" />
  <uses-permission android:name="com.google.android.apps.recyclefinder.WRITE_TRACK_DATA" />
  <!-- Permission to receive RecycleFinder internal broadcasts -->
  <permission
    android:description="@string/permission_notification_label"
    android:label="@string/permission_notification_label"
    android:name="com.google.android.apps.recyclefinder.RECYCLEFINDER_NOTIFICATIONS"
    android:permissionGroup="android.permission-group.LOCATION"
    android:protectionLevel="signature" />
  <!-- Permission to read track data -->
  <permission
    android:description="@string/permission_read_description"
    android:label="@string/permission_read_label"
    android:name="com.google.android.apps.recyclefinder.READ_TRACK_DATA"
    android:permissionGroup="android.permission-group.LOCATION"
    android:protectionLevel="dangerous" />
  <!-- Permission to receive track start/end broadcasts -->
  <permission
    android:description="@string/permission_notification_description"
    android:label="@string/permission_notification_label"
    android:name="com.google.android.apps.recyclefinder.TRACK_NOTIFICATIONS"
    android:permissionGroup="android.permission-group.LOCATION"
    android:protectionLevel="dangerous" />
  <!-- Permission to write track data, either directly or through service calls -->
  <permission
    android:description="@string/permission_write_description"
    android:label="@string/permission_write_label"
    android:name="com.google.android.apps.recyclefinder.WRITE_TRACK_DATA"
    android:permissionGroup="android.permission-group.LOCATION"
    android:protectionLevel="dangerous" />

  <uses-sdk
    android:minSdkVersion="7"
    android:targetSdkVersion="16" />
  <!-- Required features -->
  <uses-feature
    android:name="android.hardware.location"
    android:required="true" />
  <uses-feature
    android:name="android.hardware.location.gps"
    android:required="true" />
  <!-- Optional features -->
  <uses-feature
    android:name="android.hardware.bluetooth"
    android:required="false" />
  <uses-feature
    android:name="android.hardware.faketouch"
    android:required="false" />
  <uses-feature
    android:name="android.hardware.location.network"
    android:required="false" />
  <uses-feature
    android:name="android.hardware.sensor.compass"
    android:required="false" />
  <uses-feature
    android:name="android.hardware.telephony"
    android:required="false" />
  <uses-feature
    android:name="android.hardware.telephony.gsm"
    android:required="false" />
  <uses-feature
    android:name="android.hardware.touchscreen"
    android:required="false" />
  <uses-feature
    android:name="android.hardware.touchscreen.multitouch"
    android:required="false" />

  <supports-screens
    android:anyDensity="true"
    android:largeScreens="true"
    android:normalScreens="true"
    android:smallScreens="true"
    android:xlargeScreens="true" />

  <application
    android:backupAgent="com.google.android.apps.recyclefinder.io.backup.RecycleFinderBackupAgent"
    android:icon="@drawable/recyclefinder_icon"
    android:hardwareAccelerated="true"
    android:label="@string/recyclefinder_app_name"
    android:name="com.google.android.apps.recyclefinder.RecycleFinderApplication"
    android:theme="@style/ThemeSelector" >

    <!-- For data backup -->
    <meta-data
      android:name="com.google.android.backup.api_key"
      android:value="AEdPqrEAAAAIi-_QiwoRSc9_bAC9cmuNXTQyU8ajJmGtKdhskQ" />
    <!-- Activities -->
    <activity
      android:label="@string/menu_aggregated_statistics"
      android:name="com.google.android.apps.recyclefinder.AggregatedStatsActivity" />
    <activity
      android:label="@string/menu_help"
      android:name="com.google.android.apps.recyclefinder.HelpActivity" />
    <activity
      android:name="com.google.android.apps.recyclefinder.ImportActivity" >
      <intent-filter>
        <action android:name="android.intent.action.ATTACH_DATA" />
        <action android:name="android.intent.action.VIEW" />

        <category android:name="android.intent.category.BROWSABLE" />
        <category android:name="android.intent.category.DEFAULT" />

        <data android:mimeType="application/gpx" />
        <data android:mimeType="application/gpx+xml" />
        <data android:mimeType="application/vnd.google-earth.gpx" />
        <data android:mimeType="application/vnd.google-earth.gpx+xml" />
        <data android:scheme="file" />
      </intent-filter>
    </activity>
    <activity
      android:name="com.google.android.apps.recyclefinder.MarkerEditActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.MarkerDetailActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.MarkerListActivity" >
      <meta-data
        android:name="android.app.default_searchable"
        android:value="com.google.android.apps.recyclefinder.SearchListActivity" />
    </activity>
    <activity
      android:launchMode="singleTop"
      android:name="com.google.android.apps.recyclefinder.SearchListActivity" >
      <intent-filter>
        <action android:name="android.intent.action.SEARCH" />
      </intent-filter>

      <meta-data
        android:name="android.app.searchable"
        android:resource="@xml/search" />
    </activity>
    <activity
      android:label="@string/menu_sensor_state"
      android:name="com.google.android.apps.recyclefinder.SensorStateActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.TrackDetailActivity" />
    <activity
      android:name="com.google.android.apps.recyclefinder.TrackEditActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.TrackListActivity" >
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

      <meta-data
        android:name="android.app.default_searchable"
        android:value="com.google.android.apps.recyclefinder.SearchListActivity" />
    </activity>
    <activity android:name="com.google.android.apps.recyclefinder.io.backup.BackupActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.io.backup.RestoreActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.io.backup.RestoreChooserActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.io.docs.SendDocsActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.io.file.SaveActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.io.fusiontables.SendFusionTablesActivity" />
    <activity
      android:label="@string/maps_list_title"
      android:name="com.google.android.apps.recyclefinder.io.maps.ChooseMapActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.io.maps.SendMapsActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.io.sendtogoogle.AccountChooserActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.io.sendtogoogle.ConfirmSharingActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.io.sendtogoogle.UploadResultActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.settings.BackupSettingsActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.settings.ChartSettingsActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.settings.MapSettingsActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.settings.RecordingSettingsActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.settings.SensorSettingsActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.settings.SettingsActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.settings.SharingSettingsActivity" />
    <activity android:name="com.google.android.apps.recyclefinder.settings.StatsSettingsActivity" />
    <!-- Services -->
    <service
      android:exported="false"
      android:name="com.google.android.apps.recyclefinder.services.ControlRecordingService" />
    <service android:name="com.google.android.apps.recyclefinder.services.RemoveTempFilesService" />
    <service
      android:enabled="true"
      android:exported="true"
      android:icon="@drawable/arrow_320"
      android:label="@string/recyclefinder_recording_service"
      android:name="com.google.android.apps.recyclefinder.services.TrackRecordingService"
      android:permission="com.google.android.apps.recyclefinder.WRITE_TRACK_DATA" />
    <!-- Receivers -->
    <receiver android:name="com.google.android.apps.recyclefinder.BootReceiver" >
      <intent-filter>
        <action android:name="android.intent.action.BOOT_COMPLETED" />
      </intent-filter>
    </receiver>
    <receiver android:name="com.google.android.apps.recyclefinder.widgets.TrackWidgetProvider" >
      <intent-filter>
        <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
        <action android:name="com.google.android.apps.recyclefinder.TRACK_PAUSED" />
        <action android:name="com.google.android.apps.recyclefinder.TRACK_RESUMED" />
        <action android:name="com.google.android.apps.recyclefinder.TRACK_STARTED" />
        <action android:name="com.google.android.apps.recyclefinder.TRACK_STOPPED" />
        <action android:name="com.google.android.apps.recyclefinder.TRACK_UPDATE" />
      </intent-filter>
      <meta-data
        android:name="android.appwidget.provider"
        android:resource="@xml/track_widget_info" />
    </receiver>
    <!-- Providers -->
    <!-- RecycleFinder data provider -->
    <provider
      android:authorities="com.google.android.maps.recyclefinder"
      android:exported="true"
      android:name="com.google.android.apps.recyclefinder.content.RecycleFinderProvider"
      android:readPermission="com.google.android.apps.recyclefinder.READ_TRACK_DATA"
      android:writePermission="com.google.android.apps.recyclefinder.WRITE_TRACK_DATA" />
    <!-- Search suggestion provider -->
    <provider
      android:authorities="com.google.android.maps.recyclefinder.search"
      android:exported="false"
      android:name="com.google.android.apps.recyclefinder.content.SearchEngineProvider" />

    <uses-library android:name="com.google.android.maps" />
  </application>

</manifest>